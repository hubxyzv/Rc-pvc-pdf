<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RC_Merged_Validity_Verified</title>
  <style>
    /* üõ†Ô∏è CONSOLIDATED PRINT & UI STYLES - STRICTLY PRESERVED */
    @page { size: A4; margin: 0; }
    * { 
      -webkit-print-color-adjust: exact !important; 
      print-color-adjust: exact !important; 
      box-sizing: border-box;
    }
    
    body { background: #fff; font-family: Arial, sans-serif; display: flex; flex-direction: column; align-items: center; padding: 0; margin: 0; }
    .no-print, .status-panel { display: none !important; } 

    .print-wrapper { 
      display: flex !important; 
      flex-direction: column !important; 
      align-items: center !important; 
      padding-top: 1cm !important; 
      gap: 0.5cm;
    }

    /* üõ°Ô∏è OVERLAP PROTECTION HELPERS */
    .truncate {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: block;
    }

    /* --- CARD 1 STYLES --- */
    .rc-card {
      width: 8.5cm; height: 5.4cm; position: relative; color: #000;
      background: #fff url('https://iili.io/F3b22uS.png') center/100% 100% no-repeat;
      overflow: hidden; image-rendering: -webkit-optimize-contrast;
      margin-bottom: 20px;
    }
    .gov-text { position: absolute; top: 15.68001px; left: 104.3px; font-weight: bold; font-size: 7.50001pt; width: 190px; }
    
    .regn-inline-container { position: absolute; top: 41px; left: 83px; display: flex; gap: 15px; font-weight: bold; width: 235px; }
    .regn-label { font-size: 6.8pt; font-weight: bold; }
    .regn-value { font-size: 7pt; font-weight: normal; }

    .overlay-front { position: absolute; top: 67px; left: 83px; width: 228px; }
    .overlay-item { margin-bottom: 2px; width: 100%; }
    .overlay-label { font-weight: bold; font-size: 6.8pt; display: block; }
    .overlay-value { font-size: 6.2pt; line-height: 1.1; font-weight: normal; }
    
    /* Address clamp: 2 lines max, no overflow */
    .address-box {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      height: 2.2em;
    }

    .left-fields { position: absolute; top: 134px; left: 10px; width: 70px; }
    .label { font-weight: bold; font-size: 7pt; }
    .value { font-size: 7pt; font-weight: normal; }

    /* --- CARD 2 STYLES --- */
    .rc-card-front {  
      width: 8.56cm; height: 5.4cm; position: relative; font-size: 6.5pt; color: #000;  
      overflow: hidden; background: url('https://iili.io/F3bdyFf.png') center/100% 100% no-repeat;  
    }  
    .gov-text-front { position: absolute; top: 13.4px; left: 50%; transform: translateX(-50%); font-size: 7.2pt; font-weight: bold; z-index: 10; width: 75%; text-align: center; }  
    
    #categoryCircle { position: absolute; top: 16.96px; left: 12.501px; font-size: 6.0pt; font-weight: bold; z-index: 20; width: 18px; text-align: center;}
    #stateCircle { position: absolute; top: 16.96px; left: 35.0px; font-size: 6.0pt; font-weight: bold; z-index: 20; width: 18px; text-align: center;}
    .strict-state-style { top: 16.96px !important; left: 34.0px !important; }
    
    .regn-block { position: absolute; top: 38px; left: 105px; width: 212px; display: flex; flex-direction: column; z-index: 10; }  
    .pair { margin-bottom: 0.8px; width: 100%; display: flex; flex-direction: column; border-bottom: 0.1px solid rgba(0,0,0,0.03); }  
    .regn-label-f { font-size: 6.3pt; font-weight: bold; }  
    .regn-value-f { font-size: 6.3pt; font-weight: normal; }  

    .left-fields-f { position: absolute; top: 147px; left: 11px; width: 115px; z-index: 10; }  
    
    #qrCodeImg { position:absolute; bottom:58px; left:6px; width:21mm; height:21mm; z-index:10; }
    #f-auth { position: absolute; bottom: 6px; right: 10px; font-size: 5.5pt; text-align: center; width: 115px; line-height: 1.1; overflow: hidden;}
  </style>
</head>
<body>

<div class="print-wrapper">
  
  <div class="rc-card" id="rc-card">
    <div class="gov-text truncate" id="view-gov"></div>
    <div class="regn-inline-container">
      <div class="regn-item"><div class="regn-label">Regn. Number</div><div class="regn-value truncate" id="view-regNo"></div></div>
      <div class="regn-item"><div class="regn-label">Date of Regn.</div><div class="regn-value truncate" id="view-regDate"></div></div>
      <div class="regn-item" style="margin-left: -5px;">
        <div class="regn-label">Regn. Validity</div>
        <div class="regn-value truncate" id="view-valid"></div>
      </div>
    </div>
    
    <div class="overlay-front">
      <div class="overlay-item"><div class="overlay-label">Chassis Number</div><div class="overlay-value truncate" id="view-chassis"></div></div>
      <div class="overlay-item"><div class="overlay-label">Engine / Motor Number</div><div class="overlay-value truncate" id="view-engine"></div></div>
      <div class="overlay-item"><div class="overlay-label">Owner Name</div><div class="overlay-value truncate" id="view-name"></div></div>
      <div class="overlay-item"><div class="overlay-label">Son / Wife / Daughter of</div><div class="overlay-value truncate">_ _</div></div>
      <div class="overlay-item"><div class="overlay-label">Address</div><div class="overlay-value address-box" id="view-address"></div></div>
    </div>

    <div class="left-fields">
      <div class="field-block"><div class="label">Fuel</div><div class="value truncate" id="view-fuel"></div></div>
      <div class="field-block"><div class="label">Norms</div><div class="value truncate" id="view-norms"></div></div>
    </div>
  </div>

  <div class="rc-card-front">  
    <div id="govText" class="gov-text-front truncate"></div>  
    <div id="categoryCircle"></div>  
    <div id="stateCircle"></div>  
    
    <div class="regn-block">  
      <div class="pair"><div class="regn-label-f">Maker:</div><div class="regn-value-f truncate" id="f-maker"></div></div>  
      <div class="pair"><div class="regn-label-f">Model:</div><div class="regn-value-f truncate" id="f-model"></div></div>  
      <div class="pair"><div class="regn-label-f">Colour / Body Type:</div><div class="regn-value-f truncate"><span id="f-colour"></span> / <span id="f-body"></span></div></div>  
      <div class="pair"><div class="regn-label-f">Financier:</div><div class="regn-value-f truncate" id="f-finance"></div></div>  
      <div class="pair" style="border:none;"><div class="regn-label-f">Capacity / Weight:</div><div class="regn-value-f truncate"><span id="f-seat"></span> / <span id="f-weight"></span> Kg</div></div>
    </div>  

    <div class="left-fields-f">  
      <div class="field-block"><div class="regn-label-f">Mfg Month-Year</div><div class="regn-value-f truncate" id="f-mfg"></div></div>  
      <div class="field-block"><div class="regn-label-f">Cylinders</div><div class="regn-value-f truncate" id="f-cyl"></div></div>  
    </div>  

    <img id="qrCodeImg" src="" />
    <div style="position: absolute; top: 50%; right: 7px; transform: translateY(-50%) rotate(180deg); writing-mode: vertical-rl; font-size: 6.5pt; text-align: right; z-index: 15;">Form : 23A</div>  
    <div id="f-auth">Registration Authority<br /><b><%= vehicle_details.authority %></b></div>
  </div>

</div>

<script>
  const masterData = {
    regNo: "<%= vehicle_details.registration_number %>",
    regDate: "<%= vehicle_details.registration_date %>",
    cat: "<%= vehicle_details.category %>",
    serial: "<%= vehicle_details.serial %>",
    chassis: "<%= vehicle_details.chassis_number %>",
    engine: "<%= vehicle_details.engine_number %>",
    name: "<%= vehicle_details.owner_name %>",
    swd: "_ _", 
    address: "<%= vehicle_details.address %>",
    fuel: "<%= vehicle_details.fuel_type %>",
    vClass: "<%= vehicle_details.vehicle_class %>",
    maker: "<%= vehicle_details.manufacturer %>",
    model: "<%= vehicle_details.model %>",
    colour: "<%= vehicle_details.colour %>",
    bodyType: "<%= vehicle_details.body_type %>",
    seatCap: "<%= vehicle_details.seating_capacity %>",
    weight: "<%= vehicle_details.unladen_weight_kg %>",
    cubicCap: "<%= vehicle_details.cubic_capacity %>",
    hp: "<%= vehicle_details.horse_power %>",
    wheelBase: "<%= vehicle_details.wheelbase %>",
    financier: "<%= vehicle_details.financier %>",
    mfgDate: "<%= vehicle_details.manufacturing_date %>",
    cylinders: "<%= vehicle_details.cylinders %>",
    norms: "<%= vehicle_details.norms %>",
    validity: "<%= vehicle_details.valid_upto %>",
    state_code: "<%= state_code %>"
  };

  const stateMap = { AP: "Andhra Pradesh", AR: "Arunachal Pradesh", AS: "Assam", BR: "Bihar", CG: "Chhattisgarh", CH: "Chandigarh", DD: "Daman and Diu", DL: "Delhi", GA: "Goa", GJ: "Gujarat", HR: "Haryana", HP: "Himachal Pradesh", JH: "Jharkhand", JK: "Jammu and Kashmir", KA: "Karnataka", KL: "Kerala", LA: "Ladakh", LD: "Lakshadweep", MH: "Maharashtra", ML: "Meghalaya", MN: "Manipur", MP: "Madhya Pradesh", MZ: "Mizoram", NL: "Nagaland", OD: "Odisha", PB: "Punjab", PY: "Puducherry", RJ: "Rajasthan", SK: "Sikkim", TN: "Tamil Nadu", TR: "Tripura", TS: "Telangana", UK: "Uttarakhand", UP: "Uttar Pradesh", WB: "West Bengal" };

  function processAllCards() {
    const sName = stateMap[masterData.state_code] || "India";
    document.getElementById('view-gov').innerText = "Government of " + sName;
    document.getElementById('view-regNo').innerText = masterData.regNo;
    document.getElementById('view-regDate').innerText = masterData.regDate;
    document.getElementById('view-valid').innerText = masterData.validity;
    document.getElementById('view-chassis').innerText = masterData.chassis;
    document.getElementById('view-engine').innerText = masterData.engine;
    document.getElementById('view-name').innerText = masterData.name;
    document.getElementById('view-address').innerText = masterData.address;
    document.getElementById('view-fuel').innerText = masterData.fuel.toUpperCase();
    document.getElementById('view-norms').innerText = masterData.norms;
    
    document.getElementById("govText").innerText = "VEHICLE CLASS: " + masterData.vClass.toUpperCase();
    document.getElementById("stateCircle").innerText = masterData.state_code;
    document.getElementById("categoryCircle").innerText = masterData.cat.toUpperCase();
    document.getElementById("f-maker").innerText = masterData.maker;
    document.getElementById("f-model").innerText = masterData.model;
    document.getElementById("f-colour").innerText = masterData.colour;
    document.getElementById("f-body").innerText = masterData.bodyType;
    document.getElementById("f-finance").innerText = masterData.financier || "N/A";
    document.getElementById("f-seat").innerText = masterData.seatCap;
    document.getElementById("f-weight").innerText = masterData.weight;
    document.getElementById("f-mfg").innerText = masterData.mfgDate;
    document.getElementById("f-cyl").innerText = masterData.cylinders;

    document.getElementById("qrCodeImg").src = `https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=${encodeURIComponent("https://vahan.parivahan.gov.in/rcdetails/?regno=" + masterData.regNo)}`;
    
    if (["MH", "MN", "MZ", "WB"].includes(masterData.state_code)) {
      document.getElementById("stateCircle").classList.add("strict-state-style");
    }
  }
  processAllCards();
</script>
</body>
</html>
