<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RC_Ultra_HD_Centered</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <style>
    /* üõ†Ô∏è STRICT PRINT & LAYOUT SETTINGS */
    @page { size: A4; margin: 0; }
    
    body { 
      background: #f0f2f5; 
      margin: 0; 
      padding: 0; 
      font-family: Arial, sans-serif; 
    }

    /* Is container se RC Cards A4 PDF ke bilkul Middle (Center) mein aayenge */
    #pdf-page-layout {
      width: 210mm;
      height: 297mm;
      background: white;
      display: flex;
      flex-direction: column;
      justify-content: center; /* Vertical Center */
      align-items: center;     /* Horizontal Center */
      gap: 10mm;               /* Cards ke beech ka gap */
      margin: 0 auto;
    }

    .no-print-zone { 
      text-align: center; 
      padding: 20px; 
      background: #f0f2f5; 
    }

    .no-print { 
      padding: 12px 30px; 
      background: #28a745; 
      color: white; 
      border: none; 
      cursor: pointer; 
      border-radius: 6px; 
      font-weight: bold; 
    }

    /* --- CARD 1 STYLES (Strictly Preserved) --- */
    .rc-card {
      width: 8.5cm; height: 5.4cm; position: relative; color: #000;
      background: #fff url('https://iili.io/F3b22uS.png') center/100% 100% no-repeat;
      overflow: hidden; image-rendering: -webkit-optimize-contrast;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    .gov-text { position: absolute; top: 15.68001px; left: 104.3px; font-weight: bold; font-size: 7.50001pt; white-space: nowrap; }
    #view-cat { position: absolute; top: -30.9001px; left: 38.9012px; font-size: 6.0pt; font-weight: bold; }
    #view-state { position: absolute; top: -31.0001px; left: 60.5490px; font-size: 6.0pt; font-weight: bold; }
    .overlay-address-box { position: absolute; top: 91.7px; left: 0px; width: 100%; }
    .regn-container .regn-value-circle { position: absolute; top: 8px; left: 26px; width: 13px; height: 13px; border: 1.2px solid #000; border-radius: 50%; text-align: center; line-height: 13px; font-weight: bold; font-size: 8pt; }
    .regn-inline-container { position: absolute; top: 42px; left: 83px; display: flex; gap: 25px; font-weight: bold; }
    .regn-label { font-size: 6.8pt; font-weight: bold; }
    .regn-value { font-size: 7pt; font-weight: normal; }
    .regn-container { position: absolute; top: 67px; left: 245px; }
    .overlay-front { position: absolute; top: 67px; left: 83px; width: 225px; }
    .overlay-item { margin-bottom: 3px; }
    .overlay-label { font-weight: bold; font-size: 6.8pt; }
    .overlay-value { font-size: 6.2pt; line-height: 1.1; font-weight: normal; }
    .left-fields { position: absolute; top: 134px; left: 10px; }
    .label { font-weight: bold; font-size: 7pt; }
    .value { font-size: 7pt; font-weight: normal; }
    #view-norms { font-size: 6.0pt; font-weight: normal; }

    /* --- CARD 2 STYLES (Strictly Preserved) --- */
    @font-face { font-family: 'MyriadProBold'; src: local('Myriad Pro Bold'), local('MyriadPro-Bold'); font-weight: bold; }  
    .rc-card-front {  
      width: 8.56cm; height: 5.4cm; position: relative; font-size: 6.5pt; color: #000;  
      overflow: hidden; background: url('https://iili.io/F3bdyFf.png') center/100% 100% no-repeat;  
      box-sizing: border-box;
    }  
    .gov-text-front { position: absolute; top: 13.4px; left: 50%; transform: translateX(-50%); font-family: 'MyriadProBold', sans-serif; font-size: 7.5pt; font-weight: bold; white-space: nowrap; }  
    #categoryCircle { position: absolute; top: 16.96px; left: 12.501px; font-size: 6.0pt; font-weight: bold; }
    #stateCircle { position: absolute; top: 16.96px; left: 35.0px; font-size: 6.0pt; font-weight: bold; }
    .strict-state-style { top: 16.96px !important; left: 34.0px !important; }
    .regn-label-f { font-size: 6.5pt; font-weight: bold; margin-bottom: 1.5px; }  
    .regn-value-f { font-size: 6.5pt; margin-top: 1.5px; font-weight: normal; }  
    .regn-block { position: absolute; top: 39px; right: 39px; width: 200px; display: flex; flex-direction: column; }  
    .pair { margin-bottom: 0.7px; }  
    .left-fields-f { position: absolute; top: 147px; left: 11px; width: 120px; }  
    .left-fields-f .field-block { margin-bottom: 3px; }

    .pdf-link { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 9999; display: none; }
    
    @media print {
      .no-print-zone, .status-panel { display: none !important; }
      body { background: white; }
      #pdf-page-layout { box-shadow: none; margin: 0; width: 100%; }
    }
  </style>
</head>
<body>

<div class="no-print-zone">
  <button class="no-print" onclick="window.print()">Print Manual (HD)</button>
  <p>Auto-Downloading Original Quality PDF...</p>
</div>

<div id="pdf-page-layout">
  
  <div class="rc-card" id="rc-card">
    <div class="gov-text" id="view-gov">Processing...</div>
    <div class="regn-inline-container">
      <div class="regn-item"><div class="regn-label">Regn. Number</div><div class="regn-value" id="view-regNo"></div></div>
      <div class="regn-item"><div class="regn-label">Date of Regn.</div><div class="regn-value" id="view-regDate"></div></div>
      <div class="regn-item" style="margin-left: -10px; position: relative;">
        <div id="view-cat"></div>
        <div id="view-state"></div>
        <div class="regn-label">Regn. Validity</div>
        <div class="regn-value" id="view-valid"></div>
      </div>
    </div>
    <div class="regn-container">
      <div class="regn-label" style="font-weight:bold; font-size:7pt;">Owner<br>Serial</div>
      <div class="regn-value-circle" id="view-serial"></div>
    </div>
    <div class="overlay-front">
      <div class="overlay-item"><div class="overlay-label">Chassis Number</div><div class="overlay-value" id="view-chassis"></div></div>
      <div class="overlay-item"><div class="overlay-label">Engine / Motor Number</div><div class="overlay-value" id="view-engine"></div></div>
      <div class="overlay-item"><div class="overlay-label">Owner Name</div><div class="overlay-value" id="view-name"></div></div>
      <div class="overlay-item"><div class="overlay-label">Son / Wife / Daughter of</div><div class="overlay-value" id="view-swd">_ _</div></div>
      <div class="overlay-address-box">
        <div class="overlay-item"><div class="overlay-label">Address</div><div class="overlay-value" id="view-address"></div></div>
      </div>
    </div>
    <div class="left-fields">
      <div class="field-block"><div class="label">Fuel</div><div class="value" id="view-fuel"></div></div>
      <div class="field-block"><div class="label">Emission Norms</div><div class="value" id="view-norms"></div></div>
    </div>
  </div>

  <div class="rc-card-front">  
    <div id="govText" class="gov-text-front">Loading...</div>  
    <div id="categoryCircle"></div>  
    <div id="stateCircle"></div>  
    <div class="regn-item" style="position: absolute; top: 39px; right: 254px;">  
      <div class="regn-label-f">Regn. Number</div>  
      <div class="regn-value-f" id="regNoDisplay"></div>  
    </div>  
    <div class="regn-block">  
      <div class="pair" style="margin-left: 20px;"><div class="regn-label-f">Maker:</div><div class="regn-value-f" id="f-maker"></div></div>  
      <div class="pair" style="margin-left: 20px;"><div class="regn-label-f">Model:</div><div class="regn-value-f" id="f-model"></div></div>  
      <div class="pair" style="margin-left: 20px;"><div style="display: flex; gap: 40px;"><div><div class="regn-label-f">Colour:</div><div class="regn-value-f" id="f-colour"></div></div><div><div class="regn-label-f">/Body Type:</div><div class="regn-value-f" id="f-body"></div></div></div></div>  
      <div class="pair" style="margin-left: 20px;"><div class="regn-label-f">Seating (in all) Capacity</div><div class="regn-value-f" id="f-seat"></div></div>  
      <div class="pair" style="margin-left: 20px;"><div class="regn-label-f">Unladen Weight (Kg)</div><div class="regn-value-f" id="f-weight"></div></div>  
      <div class="pair" style="margin-left: 20px;"><div style="display: flex; gap: 4px;"><div style="text-align: left;"><div class="regn-label-f">Cubic Cap.</div><div class="regn-value-f" id="f-cc"></div></div><div style="text-align: left;"><div class="regn-label-f">/Horse Power (BHP/Kw)</div><div class="regn-value-f" id="f-hp"></div></div><div style="text-align: left;"><div class="regn-label-f">/Wheel Base (mm)</div><div class="regn-value-f" id="f-wheel"></div></div></div></div>  
      <div class="pair" style="margin-left: 20px;"><div class="regn-label-f">Financier</div><div class="regn-value-f" id="f-finance"></div></div>  
    </div>  
    <div class="left-fields-f">  
      <div class="field-block"><div class="regn-label-f">Month -Year of Mfg.</div><div class="regn-value-f" id="f-mfg"></div></div>  
      <div class="field-block"><div class="regn-label-f">No. of Cylinders:</div><div class="regn-value-f" id="f-cyl"></div></div>  
    </div>  
    <img id="qrCodeImg" style="position:absolute; bottom:60px; left:6px; width:22mm; height:22mm; z-index:10;" src="" alt="QR Code" />
    <div style="position: absolute; top: 50%; right: 7px; transform: translateY(-50%) rotate(180deg); writing-mode: vertical-rl; font-size: 6.5pt; text-align: right; z-index: 15;">Form : 23A</div>  
    <div id="f-auth" style="position: absolute; bottom: 7px; right: 10px; font-size: 6.5pt; line-height: 1.2; text-align: center; z-index: 10; width: 100px;">Registration Authority<br /><%= vehicle_details.authority %></div>
  </div>

</div>

<script>
  // --- AUTOMATED DATA MAPPING ---
  const masterData = {
    regNo: "<%= vehicle_details.registration_number %>",
    regDate: "<%= vehicle_details.registration_date %>",
    cat: "<%= vehicle_details.category %>",
    serial: "<%= vehicle_details.serial %>",
    chassis: "<%= vehicle_details.chassis_number %>",
    engine: "<%= vehicle_details.engine_number %>",
    name: "<%= vehicle_details.owner_name %>",
    swd: "_ _", 
    address: "<%= vehicle_details.address %>",
    fuel: "<%= vehicle_details.fuel_type %>",
    vClass: "<%= vehicle_details.vehicle_class %>",
    maker: "<%= vehicle_details.manufacturer %>",
    model: "<%= vehicle_details.model %>",
    colour: "<%= vehicle_details.colour %>",
    bodyType: "<%= vehicle_details.body_type %>",
    seatCap: "<%= vehicle_details.seating_capacity %>",
    weight: "<%= vehicle_details.unladen_weight_kg %>",
    cubicCap: "<%= vehicle_details.cubic_capacity %>",
    hp: "<%= vehicle_details.horse_power %>",
    wheelBase: "<%= vehicle_details.wheelbase %>",
    financier: "<%= vehicle_details.financier %>",
    mfgDate: "<%= vehicle_details.manufacturing_date %>",
    cylinders: "<%= vehicle_details.cylinders %>",
    auth: "<%= vehicle_details.authority %>",
    norms: "<%= vehicle_details.norms %>",
    validity: "<%= vehicle_details.valid_upto %>",
    state_code: "<%= state_code %>"
  };

  const stateMap = { UP: "Uttar Pradesh", MH: "Maharashtra", DL: "Delhi", BR: "Bihar", RJ: "Rajasthan", MP: "Madhya Pradesh", GJ: "Gujarat", WB: "West Bengal", TN: "Tamil Nadu", KA: "Karnataka" }; // Add other states as needed

  function triggerOriginalDownload() {
    const element = document.getElementById('pdf-page-layout');
    const opt = {
      margin: 0,
      filename: masterData.regNo + '_ULTRA_HD.pdf',
      image: { type: 'jpeg', quality: 1.0 },
      html2canvas: { 
        scale: 10, // Massive resolution (Original jaisa sharp)
        useCORS: true, 
        letterRendering: true,
        dpi: 600,
        imageTimeout: 0
      },
      jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
    };

    html2pdf().set(opt).from(element).save();
  }

  function fillData() {
    const sName = stateMap[masterData.state_code] || "Government of India";
    document.getElementById('view-gov').innerText = "Government of " + sName;
    document.getElementById('view-regNo').innerText = masterData.regNo;
    document.getElementById('view-regDate').innerText = masterData.regDate;
    document.getElementById('view-cat').innerText = masterData.cat.toUpperCase();
    document.getElementById('view-state').innerText = masterData.state_code;
    document.getElementById('view-valid').innerText = masterData.validity;
    document.getElementById('view-serial').innerText = masterData.serial;
    document.getElementById('view-chassis').innerText = masterData.chassis;
    document.getElementById('view-engine').innerText = masterData.engine;
    document.getElementById('view-name').innerText = masterData.name;
    document.getElementById('view-swd').innerText = masterData.swd;
    document.getElementById('view-address').innerText = masterData.address;
    document.getElementById('view-fuel').innerText = masterData.fuel.toUpperCase();
    document.getElementById('view-norms').innerText = masterData.norms;

    document.getElementById("govText").textContent = "VEHICLE CLASS: " + masterData.vClass.toUpperCase();
    document.getElementById("regNoDisplay").textContent = masterData.regNo;
    document.getElementById("stateCircle").textContent = masterData.state_code;
    document.getElementById("categoryCircle").textContent = masterData.cat.toUpperCase();
    document.getElementById("f-maker").textContent = masterData.maker;
    document.getElementById("f-model").textContent = masterData.model;
    document.getElementById("f-colour").textContent = masterData.colour;
    document.getElementById("f-body").textContent = masterData.bodyType;
    document.getElementById("f-seat").textContent = masterData.seatCap;
    document.getElementById("f-weight").textContent = masterData.weight;
    document.getElementById("f-cc").textContent = masterData.cubicCap;
    document.getElementById("f-hp").textContent = masterData.hp;
    document.getElementById("f-wheel").textContent = masterData.wheelBase;
    document.getElementById("f-finance").textContent = masterData.financier;
    document.getElementById("f-mfg").textContent = masterData.mfgDate;
    document.getElementById("f-cyl").textContent = masterData.cylinders;
    
    document.getElementById("qrCodeImg").src = `https://api.qrserver.com/v1/create-qr-code/?size=500x500&data=${encodeURIComponent("https://vahan.parivahan.gov.in/rcdetails/?regno=" + masterData.regNo)}`;
    
    if (["MH", "MN", "MZ", "WB"].includes(masterData.state_code)) {
      document.getElementById("stateCircle").classList.add("strict-state-style");
    }

    // High quality asset loading ke liye 4 seconds ka wait
    setTimeout(triggerOriginalDownload, 4000);
  }

  window.onload = fillData;
</script>
</body>
</html>
