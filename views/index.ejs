<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RC_Merged_Validity_Verified</title>
  <style>
    /* üõ†Ô∏è PDF & PRINT CONFIGURATION */
    @page { size: A4; margin: 0; }
    * { 
      -webkit-print-color-adjust: exact !important; 
      print-color-adjust: exact !important; 
      box-sizing: border-box;
      margin: 0; padding: 0;
    }

    body { 
      background: #fff; 
      font-family: Arial, sans-serif; 
      display: flex; 
      flex-direction: column; 
      align-items: center; 
    }

    .print-wrapper { 
      display: flex; 
      flex-direction: column; 
      align-items: center; 
      padding-top: 1cm; 
      gap: 0.8cm;
    }

    /* üõ°Ô∏è NO-OVERLAP HELPER */
    .safe-text {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: block;
    }

    /* --- CARD 1 STYLES (BACK) --- */
    .rc-card {
      width: 8.5cm; height: 5.4cm; position: relative; color: #000;
      background: #fff url('https://iili.io/F3b22uS.png') center/100% 100% no-repeat;
      overflow: hidden;
    }
    .gov-text { position: absolute; top: 15.6px; left: 104px; font-weight: bold; font-size: 7.5pt; width: 190px; }
    
    .regn-inline-container { 
      position: absolute; top: 41px; left: 83px; 
      display: flex; gap: 15px; width: 235px;
    }
    .regn-item { flex: 1; overflow: hidden; }
    .regn-label { font-size: 6.5pt; font-weight: bold; }
    .regn-value { font-size: 6.8pt; font-weight: normal; }

    .overlay-front { position: absolute; top: 67px; left: 83px; width: 230px; }
    .overlay-item { margin-bottom: 2px; width: 100%; }
    .overlay-label { font-weight: bold; font-size: 6.5pt; display: block; }
    .overlay-value { 
      font-size: 6.2pt; line-height: 1.1; font-weight: normal; 
      max-height: 2.2em; overflow: hidden; display: block;
    }

    .left-fields { position: absolute; top: 134px; left: 10px; width: 68px; }
    .label { font-weight: bold; font-size: 6.8pt; }
    .value { font-size: 6.5pt; font-weight: normal; }

    /* --- CARD 2 STYLES (FRONT) --- */
    .rc-card-front {  
      width: 8.56cm; height: 5.4cm; position: relative; font-size: 6.5pt; color: #000;  
      overflow: hidden; background: url('https://iili.io/F3bdyFf.png') center/100% 100% no-repeat;  
    }  
    .gov-text-front { 
      position: absolute; top: 13.4px; left: 50%; transform: translateX(-50%); 
      font-size: 7.2pt; font-weight: bold; width: 75%; text-align: center; 
    }  
    
    .regn-block { 
      position: absolute; top: 38px; left: 105px; 
      width: 210px; display: flex; flex-direction: column; 
    }  
    .pair { margin-bottom: 1px; width: 100%; border-bottom: 0.1px solid rgba(0,0,0,0.05); }  
    .regn-label-f { font-weight: bold; font-size: 6.2pt; }
    .regn-value-f { font-size: 6.2pt; font-weight: normal; padding-bottom: 1px; }

    .left-fields-f { position: absolute; top: 147px; left: 11px; width: 115px; }  
    
    #qrCodeImg { position: absolute; bottom: 58px; left: 6px; width: 21mm; height: 21mm; }
    #f-auth { 
      position: absolute; bottom: 6px; right: 10px; 
      font-size: 5.4pt; text-align: center; width: 110px; 
      line-height: 1;
    }
  </style>
</head>
<body>

<div class="print-wrapper">
  
  <div class="rc-card">
    <div class="gov-text safe-text" id="view-gov"></div>
    <div class="regn-inline-container">
      <div class="regn-item"><div class="regn-label">Regn. No</div><div class="regn-value safe-text" id="view-regNo"></div></div>
      <div class="regn-item"><div class="regn-label">Date</div><div class="regn-value safe-text" id="view-regDate"></div></div>
      <div class="regn-item"><div class="regn-label">Validity</div><div class="regn-value safe-text" id="view-valid"></div></div>
    </div>
    
    <div class="overlay-front">
      <div class="overlay-item"><span class="overlay-label">Chassis No</span><span class="overlay-value safe-text" id="view-chassis"></span></div>
      <div class="overlay-item"><span class="overlay-label">Engine No</span><span class="overlay-value safe-text" id="view-engine"></span></div>
      <div class="overlay-item"><span class="overlay-label">Owner Name</span><span class="overlay-value safe-text" id="view-name"></span></div>
      <div class="overlay-item"><span class="overlay-label">S/W/D of</span><span class="overlay-value safe-text">_ _</span></div>
      <div class="overlay-item">
        <span class="overlay-label">Address</span>
        <span class="overlay-value" id="view-address" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;"></span>
      </div>
    </div>

    <div class="left-fields">
      <div class="field-block"><div class="label">Fuel</div><div class="value safe-text" id="view-fuel"></div></div>
      <div class="field-block"><div class="label">Norms</div><div class="value safe-text" id="view-norms"></div></div>
    </div>
  </div>

  <div class="rc-card-front">  
    <div id="govText" class="gov-text-front safe-text"></div>  
    <div class="regn-block">  
      <div class="pair"><div class="regn-label-f">Maker:</div><div class="regn-value-f safe-text" id="f-maker"></div></div>  
      <div class="pair"><div class="regn-label-f">Model:</div><div class="regn-value-f safe-text" id="f-model"></div></div>  
      <div class="pair"><div class="regn-label-f">Color/Body:</div><div class="regn-value-f safe-text"><span id="f-colour"></span> / <span id="f-body"></span></div></div>  
      <div class="pair"><div class="regn-label-f">Financier:</div><div class="regn-value-f safe-text" id="f-finance"></div></div>  
      <div class="pair" style="border:none;"><div class="regn-label-f">Capacity/Weight:</div><div class="regn-value-f safe-text"><span id="f-seat"></span> / <span id="f-weight"></span> Kg</div></div>
    </div>  

    <img id="qrCodeImg" src="" />
    <div id="f-auth">Registration Authority<br /><span class="safe-text"><%= vehicle_details.authority %></span></div>
  </div>

</div>

<script>
  const masterData = {
    regNo: "<%= vehicle_details.registration_number %>",
    regDate: "<%= vehicle_details.registration_date %>",
    validity: "<%= vehicle_details.valid_upto %>",
    chassis: "<%= vehicle_details.chassis_number %>",
    engine: "<%= vehicle_details.engine_number %>",
    name: "<%= vehicle_details.owner_name %>",
    address: "<%= vehicle_details.address %>",
    fuel: "<%= vehicle_details.fuel_type %>",
    norms: "<%= vehicle_details.norms %>",
    vClass: "<%= vehicle_details.vehicle_class %>",
    maker: "<%= vehicle_details.manufacturer %>",
    model: "<%= vehicle_details.model %>",
    colour: "<%= vehicle_details.colour %>",
    body: "<%= vehicle_details.body_type %>",
    finance: "<%= vehicle_details.financier %>",
    seat: "<%= vehicle_details.seating_capacity %>",
    weight: "<%= vehicle_details.unladen_weight_kg %>",
    state_code: "<%= state_code %>"
  };

  const stateMap = { UP: "Uttar Pradesh", DL: "Delhi", MH: "Maharashtra", BR: "Bihar", RJ: "Rajasthan" }; // Add others as needed

  function fillData() {
    const sName = stateMap[masterData.state_code] || "India";
    document.getElementById('view-gov').innerText = "Government of " + sName;
    document.getElementById('view-regNo').innerText = masterData.regNo;
    document.getElementById('view-regDate').innerText = masterData.regDate;
    document.getElementById('view-valid').innerText = masterData.validity;
    document.getElementById('view-chassis').innerText = masterData.chassis;
    document.getElementById('view-engine').innerText = masterData.engine;
    document.getElementById('view-name').innerText = masterData.name;
    document.getElementById('view-address').innerText = masterData.address;
    document.getElementById('view-fuel').innerText = masterData.fuel;
    document.getElementById('view-norms').innerText = masterData.norms;

    document.getElementById('govText').innerText = "VEHICLE CLASS: " + masterData.vClass.toUpperCase();
    document.getElementById('f-maker').innerText = masterData.maker;
    document.getElementById('f-model').innerText = masterData.model;
    document.getElementById('f-colour').innerText = masterData.colour;
    document.getElementById('f-body').innerText = masterData.body;
    document.getElementById('f-finance').innerText = masterData.finance;
    document.getElementById('f-seat').innerText = masterData.seat;
    document.getElementById('f-weight').innerText = masterData.weight;
    
    document.getElementById("qrCodeImg").src = `https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=${encodeURIComponent("https://vahan.parivahan.gov.in/rcdetails/?regno=" + masterData.regNo)}`;
  }
  window.onload = fillData;
</script>
</body>
</html>
